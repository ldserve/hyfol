{%- assign mega_menus = section.blocks | map: 'settings' | map: 'menu_item' -%}
{%- if section.settings.desktop_navigation_layout == 'condensed' -%}
{%- assign is_floating = true -%}
{%- else -%}
{%- assign is_floating = false -%}
{%- endif -%}

{%- assign is_mega_menu = false -%}
{%- assign downcase_title = menu.title | downcase | strip -%}

{%- for mega_menu in mega_menus -%}
{%- assign mega_menu_setting_downcase = mega_menu | downcase | strip -%}

{%- if mega_menu_setting_downcase == downcase_title -%}
{%- assign is_mega_menu = true -%}
{%- break -%}
{%- endif -%}
{%- endfor -%}

{%- if is_floating == false and is_mega_menu -%}
{%- render 'mega-menu', is_floating: is_floating, mega_menu: menu, index: index -%}
{%- else -%}

<div class="nav-exhibition " aria-hidden="true">
  {%- for block in section.blocks -%}
  {%- if block.settings.link_name==menu.title -%}
  {%- assign config = block.settings -%}
  {%- break -%}
  {%- endif -%}
  {%- endfor -%}

  {%- if config.link_name == menu.title -%}
  <div class="nav-bar__image" style="width:200px;">
  {%- capture supported_sizes -%}{%- render 'image-size', sizes: '200,300,400,500', image: config.image_url -%}{%- endcapture -%}
  {%- assign image_url = config.image_url | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
   <img class="lazyload " alt="{{ config.image_url.alt | escape }}" data-src="{{ image_url }}" data-widths="[{{ supported_sizes }}]" data-sizes="auto">
  </div> 

  {%- endif -%}
  {%- comment -%}
  {%- endcomment -%}
  <ul id="{{ index }}"
    class="nav-dropdown clearborder {% if is_floating %}nav-dropdown--floating {% if mega_menus.size > 0 %}nav-dropdown--fixed {% endif %}{% elsif menu.levels == 1 %}nav-dropdown--restrict{% endif %} clearposition d-flex"
    data-type="menu" role="list" data-expenable="1">
    {%- if is_floating -%}
    {%- comment -%}
    {%- render 'icon', icon: 'nav-triangle-borderless' -%}
    {%- endcomment -%}
    {%- endif -%}

    {%- for link in menu.links -%}
    {%- assign is_mega_menu = false -%}
    {%- assign downcase_title = link.title | downcase | strip -%}

    {%- for mega_menu in mega_menus -%}
    {%- assign mega_menu_setting_downcase = mega_menu | downcase | strip -%}

    {%- if mega_menu_setting_downcase == downcase_title -%}
    {%- assign is_mega_menu = true -%}
    {%- break -%}
    {%- endif -%}
    {%- endfor -%}

    <li class="nav-dropdown__item clearposition {% if is_mega_menu %}has-mega-menu{% endif %}">
      {%- if link.links.size == 0 -%}
      <a href="{{ link.url }}" class="nav-dropdown__link link shence_commodityView" data-type="menuitem"
        data-scenable="1" data-expenable="1" data-bindexp="1" data-sctype="mktClick"
        data-scdata='{"mkt_type":"bar","first_mkt_name":"顶部导航","first_mkt_id":"{{ section.id }}","second_mkt_rank":"{{ menuindex }}","third_mkt_rank":"{{ forloop.index }}","mkt_material_url":"","mkt_material_name":"{{ link.title | handleize }}","commodity_spuid":"","commodity_skuid":"","commodity_name":"","original_price":"","current_price":"","currency_unit":"","mkt_tag":[]}'>
        {{link.title }}</a>
      {%- else -%}
      {%- capture index_nested -%}{{ index }}-{% increment nav_dropdown %}{%- endcapture -%}
      <a href="{{ link.url }}" class="nav-dropdown__link link" data-type="menuitem" aria-expanded="false"
        aria-controls="{{ index_nested }}" aria-haspopup="true">{{- link.title -}} 
 
      </a>

      {%- if is_mega_menu -%}
      {%- render 'mega-menu', is_floating: is_floating, mega_menu: link, index: index_nested -%}
      {%- else -%}

      <ul id="{{ index_nested }}" class="nav-dropdown clearposition clearborder padding-0 " data-type="menu" aria-hidden="true"
        role="list" data-expenable="1">
        {%- comment -%}
        {%- render 'icon', icon: 'nav-triangle-left' -%}
        {%- endcomment -%}

        {%- for sub_link in link.links -%}
        <li class="nav-dropdown__item sub-item">
          {%- if sub_link.links.size == 0 -%}
          <a href="{{ sub_link.url }}" class="nav-dropdown__link link" data-type="menuitem">{{ sub_link.title }}</a>
          {%- else -%}
          {%- capture index_nested_nested -%}{{ index_nested }}-{% increment nav_dropdown_nested %}{%- endcapture -%}

          <a href="{{ sub_link.url }}" class="nav-dropdown__link link" data-type="menuitem" aria-expanded="false"
            aria-controls="{{ index_nested_nested }}" aria-haspopup="true">{{- sub_link.title -}} {%- render 'icon',
            icon: 'arrow-right' -%}</a>

          <ul id="{{ index_nested_nested }}" class="nav-dropdown clearborder clearposition  sub-bar padding-0" data-type="menu"
            aria-hidden="true" role="list" data-expenable="1">
            {%- for sub_sub_link in sub_link.links -%}
            <li class="nav-dropdown__item sub-item">
              <a href="{{ sub_sub_link.url }}" class="nav-dropdown__link link" data-type="menuitem">{{
                sub_sub_link.title }}</a>
            </li>
            {%- endfor -%}
          </ul>
          {%- endif -%}
        </li>
        {%- endfor -%}
      </ul>
      {%- endif -%}
      {%- endif -%}
    </li>
    {%- endfor -%}
  </ul>
</div>
{%- endif -%}
<style>
  #shopify-section- {{ section.id }} .nav-bar__linklist .nav-bar__item>a {
    position: relative;
  }

  #shopify-section- {{ section.id}}.nav-bar__linklist .nav-bar__item>a:after {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    content: "";
    pointer-events: none;
    border-bottom: 2px solid;
    opacity: 0;
    -webkit-transform: scale(0, 1);
    transform: scale(0, 1);
    -webkit-transition: opacity 0.5s, transform 0.5s;
    transition: opacity 0.5s, transform 0.5s;
  }

  #shopify-section- {{ section.id}}.nav-bar__linklist .nav-bar__item:hover>a:after {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
  }

</style>